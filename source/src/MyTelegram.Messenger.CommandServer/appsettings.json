{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "mongodb://localhost:27017?maxPoolSize=10000"
  },
  "App": {
    "QueryServerEventStoreDatabaseName": "tg", // rpc result event store
    "QueryServerReadModelDatabaseName": "tg", // rpc result readmodel
    "DatabaseName": "tg", // messenger readmodel
    "BotDatabaseName": "tg",
    "FileServerGrpcServiceUrl": "http://localhost:10001",
    //will use the fixed verify code if value is not empty
    "FixedVerifyCode": null,
    "VerificationCodeLength": 5,
    "VerificationCodeExpirationSeconds": 300,
    "JoinChatDomain": "https://t.me",
    "ChannelGetDifferenceIntervalSeconds": 60,
    "UseInMemoryFilters": true,
    "IsMediaDc": false,
    // if true,call createChat will auto create super group
    "AutoCreateSuperGroup": true,
    "EnableFutureAuthToken": true,
    "SetPremiumToTrueAfterUserCreated": true,
    "SendWelcomeMessageAfterUserSignIn": false,
    "WebRtcConnections": [
      {
        "Ip": "192.168.1.100",
        "Ipv6": "",
        "Port": 20444,
        "Turn": true,
        "Stun": true,
        "UserName": "a",
        "Password": "b"
      }
    ],
    "ThisDcId": 1,
    "DcOptions": [
      // Main DC server
      {
        "Id": 1,
        "IpAddress": "192.168.1.100",
        "Port": 20443,
        "TcpoOnly": true,
        "ThisPortOnly": true,
        "Ipv6": false,
        "Cdn": false,
        "MediaOnly": false,
        "Static": false
      },

      // Local bot API DC server
      {
        "Id": 2,
        "IpAddress": "192.168.1.100",
        "Port": 20543,
        "TcpoOnly": true,
        "ThisPortOnly": true,
        "Ipv6": false,
        "Cdn": false,
        "MediaOnly": false,
        "Static": false
      },

      // Media DC server
      {
        "Id": 2,
        "IpAddress": "192.168.1.100",
        "Port": 20643,
        "TcpoOnly": true,
        "ThisPortOnly": true,
        "Ipv6": false,
        "Cdn": false,
        "MediaOnly": true,
        "Static": false
      }
    ]
  },
  "RabbitMQ": {
    "Connections": {
      "Default": {
        "HostName": "localhost",
        "Port": 5672,
        "UserName": "test",
        "Password": "test"
      }
    },
    "EventBus": {
      "ClientName": "MyTelegramMessengerCommandServer",
      "ExchangeName": "MyTelegramExchange"
    }
  },
  "Redis": {
    "Configuration": "localhost:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Debug",
        "EventFlow": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "rollingInterval": "Day",
                //"buffered": true,
                "path": "./Logs/log-.txt",
                "outputTemplate": "{Timestamp:o} [{Level:u3}] {Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}